            app:layout_heightPercent="7.5%"
            app:layout_marginTopPercent="18%"
            android:id="@+id/mapTabButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:alpha="0" />

        <Button
