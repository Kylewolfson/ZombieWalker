<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@color/com_facebook_button_background_color_selected"
    android:alpha=".7">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="On your trek..."
        android:id="@+id/safehouseTitle"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/safehouseDescription"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:padding="20dp"
        android:text="text text text..."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close Button"
        android:id="@+id/safehouseCloseButton"
        android:layout_marginTop="30dp"
        android:layout_below="@id/safehouseDescription"/>
</RelativeLayout>