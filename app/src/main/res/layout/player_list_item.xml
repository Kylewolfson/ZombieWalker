<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/playerAvatarImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/axe_inventory"
            android:layout_gravity="center" />

    </RelativeLayout>

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="ThisNoseKnows" />

    <ToggleButton
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textOff="Cancel Invite"
        android:textOn="Invite player"
        android:textStyle="bold"
        android:background="@drawable/blank_notebook_interaction_btn"
        android:text="" />

</LinearLayout>